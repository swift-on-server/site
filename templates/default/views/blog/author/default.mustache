{{<html}}
{{$main}}
<div id="author-page">
    
    <header>
        {{#page.image}}<img class="large rounded" src="{{page.image}}" alt="{{page.title}}">{{/page.image}}
        <h1>{{page.title}}</h1>
        {{#page.companyName}}<a href="{{page.companyUrl}}">{{page.companyName}}</a>{{/page.companyName}}
        {{& page.contents.html}}
        {{#page.ctaUrl}}<a class="cta" href="{{page.ctaUrl}}">{{page.ctaLabel}}</a>{{/page.ctaUrl}}
    </header>
    
    <p><br>{{count(page.posts)}} posts</p>
    
    {{#empty(page.posts)}}
    Empty.
    {{/empty(page.posts)}}
    {{^empty(page.posts)}}
    <div class="grid grid-321">
    {{#page.posts}}
        
        {{> partials.blog.post}}
    {{/page.posts}}
    </div>
    {{/empty(page.posts)}}
    
</div>

{{/main}}
{{/html}}
