<div class="issue">
    <h2 class="title"><a href="{{permalink}}" target="_blank">{{title}}</a></h2>
    <div class="meta">

        <time datetime="{{publication.formats.sitemap}}">{{publication.formats.sitemap}}</time>

        <time datetime="{{publication.html}}">{{publication.html}}</time>
        {{#contents.readingTime}} 
            &middot; <span class="reading-time">{{.}} min read</span>
        {{/contents.readingTime}}
    </div>
</div>
